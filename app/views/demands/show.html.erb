<% @topics.each do |t| %>
  <%= t.description %>
  <% if t.accepted %> <!--APROVADO-->
    <%= link_to "Aprovado", '#', class: 'btn btn-success' %>
  <% else %> <!--REPROVADO-->
    <% if t.accepted == false %>
      <%= link_to "Recusado", '#', class: 'btn btn-danger' %>
    <% else %> <!--NULL-->
      <%= link_to "Aprovado", '#', class: 'btn btn-success' %>
      <%= link_to "Recusado", '#', class: 'btn btn-danger' %>
    <% end %>
  <% end %>
<% end %>

<%= form_for @topic do |f| -%>
  <h2>
    <%= f.label :description, "Description" %>
    <br>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :category, "Category" %>
    <br>
    <%= f.text_field :category %>
    <br><br>
    <%= f.label :notes, "Notes" %>
    <br>
    <%= f.text_area :notes %>
    <br><br>
    <%= f.submit class: "btn btn-primary", name: "demand_id", value: @demand.id %>
  </h2>
<% end %>