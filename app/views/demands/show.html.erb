<h1>
  Tópicos
</h1>

<% @topics.each do |t| %>
  <div class="demand_index container">
    <h2>
      <%= t.description %>
      <br>
      <%= t.category %>
      <br>
      <%= t.notes %>
    </h2>
    <br>
    <% if ! t.sent %>
      <center>
        <%= link_to "Enviar", send_topic_path(sent: true, topic_id: t.id) , class: 'btn btn-success' %>
        <%= link_to "Excluir", t, method: :delete , class: 'btn btn-danger' %>
      </center>
    <% elsif t.accepted %>
      <h2>
        <font color="green">Tópico Aprovado!</font>
      </h2>
    <% else %>
      <h2>
        <font color="blue">Aguardando Resposta da Equipe de Marketing</font>
      </h2>
    <% end %>
    <br>
  </div>
  <br>
<% end %>

<%= form_for @topic do |f| -%>
  <h2>
    <%= f.label :description, "Descrição" %>
    <br>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :category, "Categoria" %>
    <br>
    <%= f.text_field :category %>
    <br><br>
    <%= f.label :notes, "Observações" %>
    <br>
    <%= f.text_area :notes %>
    <br><br>
    <%= f.button :submit => "", class: "btn btn-primary", name: "demand_id", value: @demand.id %>
  </h2>
<% end %>