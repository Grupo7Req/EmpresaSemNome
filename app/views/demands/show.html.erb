<% @topics.each do |t| %>
  <h2>
    <%= t.description %>
    <br><br>
    <% if t.accepted %> <!--APROVADO-->
      <%= link_to "Aprovado", '#', class: 'btn btn-success' %>
    <% else %> <!--REPROVADO-->
      <% if t.accepted == false %>
        <%= link_to "Recusado", '#', class: 'btn btn-danger' %>
      <% else %> <!--NULL-->
        <%= link_to "Aprovado", '#', class: 'btn btn-success' %>
        <%= link_to "Recusado", '#', class: 'btn btn-danger' %>
      <% end %>
    <% end %>
    <br><br>
    <%= link_to "Excluir", t, method: :delete , class: 'btn btn-default' %>
  </h2>
<% end %>

<%= form_for @topic do |f| -%>
  <h2>
    <%= f.label :description, "Description" %>
    <br>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :category, "Category" %>
    <br>
    <%= f.text_field :category %>
    <br><br>
    <%= f.label :notes, "Notes" %>
    <br>
    <%= f.text_area :notes %>
    <br><br>
    <%= f.submit class: "btn btn-primary", name: "demand_id", value: @demand.id %>
  </h2>
<% end %>