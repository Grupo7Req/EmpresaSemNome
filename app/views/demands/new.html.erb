<%= form_for @demand do |f| -%>
  <h2>
    <%= f.label :name, "Nome" %>
    <br>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :description, "Descrição" %>
    <br>
    <%= f.text_field :description %>
    <br><br>
    <%= f.submit 'Criar demanda', :class => 'btn btn-info' %>
  </h2>
<% end %>