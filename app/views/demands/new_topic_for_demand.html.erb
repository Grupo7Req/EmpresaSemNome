<h1>Novo Tópico</h1>
<%= form_for @topic do |f| -%>
  <h2>
    <%= f.label :description, "Descrição" %>
    <br>
    <%= f.text_field :description %>
    <br><br>
    <%= f.label :category, "Categoria" %>
    <br>
    <%= f.text_field :category %>
    <br><br>
    <%= f.label :notes, "Observações" %>
    <br>
    <%= f.text_area :notes %>
    <br><br>
    <%= f.button :submit => "", class: "btn btn-primary", name: "demand_id", value: @demand.id %>
  </h2>
<% end %>